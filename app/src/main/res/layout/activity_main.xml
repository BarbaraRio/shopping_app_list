<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F8"
    android:backgroundTint="#E4F3E1FF"
    android:divider="@android:drawable/editbox_background"
    android:foregroundTint="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_app"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Lista de Compras"
        android:textAlignment="inherit"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#2B056E"
        android:textColorHighlight="#FF0202"
        android:textColorHint="#000000"
        android:textColorLink="#CCC9D3"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/lista_de_compras"
        android:layout_width="411dp"
        android:layout_height="639dp"
        android:autofillHints="Maçã 2x"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Digite os itens da lista"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4D2C87"
        android:backgroundTint="#4D2C87"
        android:baselineAligned="true"
        android:freezesText="false"
        android:gravity="center|center_horizontal"
        android:layerType="none"
        android:text="Salvar"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#090808"
        android:textColorLink="#009688"
        android:textCursorDrawable="@android:drawable/editbox_background_normal"
        android:textSize="20sp" />

</LinearLayout>